<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bglogin"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40sp"
                android:text="用户注册"
                android:textColor="@color/wat"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/common_short_button_selector"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/common_short_button_selector"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ddd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="120dp">

            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5.0dip">

                <EditText
                    android:text="qq123"
                    android:inputType="textPersonName"
                    android:id="@+id/et_username"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imb_login"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top|right"
                    android:background="@color/wat"
                    android:hint="用户名/英文字母开头"
                    android:paddingLeft="40dp" />

                <ImageButton
                    android:id="@+id/imb_login"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:contentDescription="111"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/user_black_24dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/row1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5.0dip">

                <EditText
                    android:text="12345678"
                    android:inputType="textPassword"
                    android:id="@+id/et_password"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imb_pwd"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top|right"
                    android:background="@color/wat"
                    android:hint="密码/不得少于6位"
                    android:paddingLeft="40dp" />

                <ImageButton
                    android:id="@+id/imb_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:contentDescription="22"
                    android:onClick="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/pwd_black_24dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/row2"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5.0dip">

                <EditText
                    android:text="12345678"
                    android:inputType="textPassword"
                    android:id="@+id/et_password_2"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imb_repwd"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top|right"
                    android:background="@color/wat"
                    android:hint="重新输入一次密码"
                    android:paddingLeft="40dp" />

                <ImageButton
                    android:id="@+id/imb_repwd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:contentDescription="233"
                    android:onClick="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/pwd_black_24dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/row3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5.0dip">

                <EditText
                    android:text="19930311"
                    android:inputType="numberDecimal"
                    android:id="@+id/et_birthday"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imb_birth"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top|right"
                    android:background="@color/wat"
                    android:hint="生日(19990909)"
                    android:paddingLeft="40dp" />

                <ImageButton
                    android:id="@+id/imb_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:contentDescription="dsds"
                    android:onClick="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/birth_black_24dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/row4"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="5.0dip">

                <EditText
                    android:text="wenyunzhao@sina.com"
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_email"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/button_login"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top|right"
                    android:background="@color/wat"
                    android:hint="邮箱"
                    android:paddingLeft="40dp" />

                <ImageButton
                    android:id="@+id/button_login"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center|right"
                    android:background="@null"
                    android:contentDescription="33d"
                    android:onClick="true"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/email_black_24dp"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
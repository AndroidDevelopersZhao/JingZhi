<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_home"
            style="@style/BottomTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/login_button_selector"
            android:text="首页" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_1" />

        <Button
            android:id="@+id/bt_setting"
            style="@style/BottomTabStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/setting_button_selector"
            android:text="设置" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_1" />

        <Button
            android:id="@+id/bt_l_c"
            style="@style/BottomTabStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/history_button_selector"
            android:text="定位拍照" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_1" />

        <Button
            android:id="@+id/bt_location"
            style="@style/BottomTabStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/locate_button_selector"
            android:text="定位" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_1" />

        <Button
            android:id="@+id/bt_search"
            style="@style/BottomTabStyle"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/search_button_selector"
            android:text="搜索" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/image_user">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left"
                    android:src="@drawable/back_black_24dp" />

                <cn.com.xxutils.view.XXRoundImageView
                    android:id="@+id/iv_userlogo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_sex_male" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_userlogo"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:minWidth="70dp"
                    android:text="飞翔的切"
                    android:textColor="@color/textColor_alert_button_destructive"
                    android:textSize="14dp" />

            </RelativeLayout>

            <cn.com.xxutils.view.XXListView
                android:id="@+id/lv_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></cn.com.xxutils.view.XXListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>